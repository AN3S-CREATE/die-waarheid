# ============================================================================
# DIE WAARHEID - ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# ============================================================================
# API KEYS (REQUIRED)
# ============================================================================

# Google Gemini API Key (required for AI analysis)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Alternative Google API Key (fallback)
GOOGLE_API_KEY=your_google_api_key_here

# HuggingFace Token (optional, for advanced models)
# Get from: https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=your_huggingface_token_here
HUGGINGFACE_API_KEY=your_huggingface_token_here

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Environment (development/production/testing)
ENVIRONMENT=development

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Streamlit Server Configuration
STREAMLIT_PORT=8501

# React Frontend Configuration
REACT_PORT=5173

# ============================================================================
# SECURITY SETTINGS
# ============================================================================

# API Key for endpoint authentication
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEY=generate_a_secure_32_character_key_here

# Allowed CORS Origins (comma-separated)
# Add your frontend URLs here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8501,http://127.0.0.1:3000,http://127.0.0.1:5173,http://127.0.0.1:8501

# Maximum file upload size (in bytes)
# Default: 500MB = 524288000 bytes
MAX_FILE_SIZE=524288000

# ============================================================================
# MODEL CONFIGURATION
# ============================================================================

# Whisper model size (tiny/small/medium/large)
# tiny: fastest, least accurate
# small: good balance (recommended for development)
# medium: better accuracy, slower
# large: best accuracy, slowest
WHISPER_MODEL_SIZE=small

# Use GPU if available (true/false)
USE_GPU=true

# Device selection (auto/cpu/cuda)
DEVICE=auto

# ============================================================================
# DATABASE SETTINGS
# ============================================================================

# Database URL
# SQLite (default): sqlite:///./die_waarheid.db
# PostgreSQL: postgresql://user:password@localhost:5432/die_waarheid
# MySQL: mysql://user:password@localhost:3306/die_waarheid
DATABASE_URL=sqlite:///./die_waarheid.db

# Database connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600

# ============================================================================
# GOOGLE DRIVE INTEGRATION (OPTIONAL)
# ============================================================================

# Path to Google credentials JSON file
GOOGLE_CREDENTIALS_PATH=./credentials/google_credentials.json

# Google Drive folder names
GDRIVE_AUDIO_FOLDER=Investigation_Audio
GDRIVE_TEXT_FOLDER=Investigation_Text

# ============================================================================
# AUDIO PROCESSING SETTINGS
# ============================================================================

# Target sample rate for audio processing
TARGET_SAMPLE_RATE=16000

# Supported audio formats (comma-separated)
SUPPORTED_AUDIO_FORMATS=.opus,.ogg,.mp3,.wav,.m4a,.aac

# Supported text formats (comma-separated)
SUPPORTED_TEXT_FORMATS=.txt,.md,.csv,.json

# ============================================================================
# FORENSIC ANALYSIS THRESHOLDS
# ============================================================================

# Stress detection thresholds
STRESS_THRESHOLD_HIGH=50
SILENCE_RATIO_THRESHOLD=0.4
INTENSITY_SPIKE_THRESHOLD=0.7

# Pattern detection thresholds
GASLIGHTING_THRESHOLD=0.3
TOXICITY_THRESHOLD=0.4
NARCISSISTIC_PATTERN_THRESHOLD=0.35

# ============================================================================
# PERFORMANCE SETTINGS
# ============================================================================

# Enable caching (true/false)
ENABLE_CACHE=true

# Cache directory
CACHE_DIR=./cache

# Number of worker threads for parallel processing
WORKER_THREADS=4

# Timeout settings (in seconds)
TRANSCRIPTION_TIMEOUT=300
ANALYSIS_TIMEOUT=180
API_REQUEST_TIMEOUT=30

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log level (DEBUG/INFO/WARNING/ERROR/CRITICAL)
LOG_LEVEL=INFO

# Log file path (leave empty to log to console only)
LOG_FILE=./logs/die_waarheid.log

# Enable structured logging (true/false)
STRUCTURED_LOGGING=true

# ============================================================================
# RATE LIMITING
# ============================================================================

# Rate limits per minute
TRANSCRIPTION_RATE_LIMIT=10
ANALYSIS_RATE_LIMIT=20
TRAINING_RATE_LIMIT=30
GENERAL_RATE_LIMIT=100

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Enable debug mode (true/false)
DEBUG=false

# Enable auto-reload for development (true/false)
AUTO_RELOAD=true

# Enable API documentation (true/false)
ENABLE_DOCS=true

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================

# Enable metrics collection (true/false)
ENABLE_METRICS=false

# Metrics endpoint
METRICS_ENDPOINT=/metrics

# Health check endpoint
HEALTH_ENDPOINT=/health

# ============================================================================
# EXAMPLE VALUES FOR QUICK SETUP
# ============================================================================

# Uncomment and modify these for quick development setup:
# GEMINI_API_KEY=AIzaSyD...your_actual_key_here
# API_KEY=your_generated_32_character_secure_key_here
# ENVIRONMENT=development
# DEBUG=true
# LOG_LEVEL=DEBUG

# ============================================================================
# SECURITY NOTES
# ============================================================================

# 1. Never commit this file with real values to version control
# 2. Use strong, unique API keys
# 3. Regularly rotate API keys
# 4. Use HTTPS in production
# 5. Restrict CORS origins in production
# 6. Use environment-specific configurations
# 7. Monitor API usage and set appropriate rate limits

# ============================================================================
# GETTING API KEYS
# ============================================================================

# Google Gemini API:
# 1. Go to https://makersuite.google.com/app/apikey
# 2. Create a new API key
# 3. Copy the key to GEMINI_API_KEY above

# HuggingFace Token (optional):
# 1. Go to https://huggingface.co/settings/tokens
# 2. Create a new token with read permissions
# 3. Copy the token to HUGGINGFACE_TOKEN above

# Generate secure API key:
# python -c "import secrets; print('API_KEY=' + secrets.token_urlsafe(32))"
